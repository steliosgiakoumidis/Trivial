@model QuestionParameters

<h1>Select and start game</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="GetQuestions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<Web.Enum.Difficulty>()" class="form-control" ></select>

            </div>
            <div class="form-group">
                <input style="background-color: seagreen" type="submit" value="Start game" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

